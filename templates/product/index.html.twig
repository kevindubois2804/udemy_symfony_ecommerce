{% extends 'base.html.twig' %}


{% block body %}
	<div class="container my-5">
		<div class="row">
			<div class="col-md-6">
				<img src="/uploads/{{product.illustration}}" class="img-fluid" alt="{{product.name}}"></div>
			<div class="col-md-6">
				<small>
					<a href="{{ path('app_category', {slug: product.category.slug} ) }}">{{product.category.name}}</a>
					>
					{{ product.name }}
				</small>
				<h1>{{product.name}}</h1>
				{{product.description|raw}}
				<span class="d-block mb-3">{{product.pricewt|price}}</span>
				<button class="btn btn-success w-100 mt-3">Ajouter au panier</button>
			</div>
		</div>
	</div>
{% endblock %}
